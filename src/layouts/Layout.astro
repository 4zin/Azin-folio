---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
import Header from '../components/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
const homePage = Astro.url.pathname === '/';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Az1nDev's portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <Header />
    <main
      class=`flex h-full flex-col justify-around ${homePage ? "bg-[url('../assets/images/pixel-bg.webp')] bg-cover bg-center bg-no-repeat" : ''}`
    >
      <slot />
    </main>
  </body>
</html>
